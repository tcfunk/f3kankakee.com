{%
  set classes = [
    'layout',
    'section_layout',
    'layout--one-column-extra',
  ]
%}
{% if content %}
  <section{{ attributes.addClass(classes) }}>
    <div class="container">
      {% if content.title %}
      <div class="layout-content">
        <div {{ region_attributes.title.addClass('layout__region', 'layout__region--title') }}>
          {{ content.title }}
        </div>
      </div>
      {% endif %}
      {% if content.first %}
      <div class="layout-content">
        <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first') }}>
          {{ content.first }}
        </div>
      </div>
      {% endif %}
      {% if content.footer %}
      <div class="layout-content">
        <div {{ region_attributes.footer.addClass('layout__region', 'layout__region--footer') }}>
          {{ content.footer }}
        </div>
      </div>
      {% endif %}
    </div>
  </section>
{% endif %}
